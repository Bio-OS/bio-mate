      "label": "基因组每个刻度表示的碱基数"
    },
    {
      "type": "number",
      "key": "chr_scale_dr",
      "label": "基因组刻度线长度"
    },
    {
      "type": "number",
      "key": "chr_scale_fmt_strokeWidth",
      "label": "基因组刻度线粗细"
    },
    {
      "type": "number",
      "key": "chr_scale_label_fmt_fontSize",
      "label": "基因组刻度标签字体大小"
    },
    {
      "type": "switch",
      "key": "show_karyotype",
      "label": "显示核型条带",
      "help": "显示基因组核型条带"
    },    
    {
      "type": "switch",
      "key": "show_cyto_label",
      "label": "显示核型条带标签"
    },
    {
      "type": "number",
