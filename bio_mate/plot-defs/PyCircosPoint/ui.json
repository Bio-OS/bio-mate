    },
    {
      "type": "number",
      "key": "cyto_label_fmt_fontSize",
      "label": "核型条带标签字体大小"
    },
    {
      "type": "input",
      "key": "cyto_label_fmt_fillColor",
      "label": "核型条带标签字体颜色"
    },
    {
      "type": "switch",
      "key": "show_point",
      "label": "显示点状态图(point)"
    },
    {
      "type": "number",
      "key":  "point_size",
      "label": "point点大小"
    },
    {
      "type": "number",
      "key": "point_strokeWidth",
      "label": "point轮廓粗细"
    },
    {
      "type": "input",
      "key": "point_strokeColor",
